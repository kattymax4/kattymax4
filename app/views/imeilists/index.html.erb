<div class="container">  
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <h1 class="text-center login-title">My IMEI numbers List</h1><br><br>
      <div class="account-wall">
      	<% if @imeilist.blank? %>
      	<h4> No IMEI Number Registered Yet <h4>
      	<% else %>
				<% @imeilist.try(:each) do |ime| %>
					<table class ="table table-striped">
						<tr id="myrow">
							<td><%= ime.try(:imei) %></td>
							<td>
								<div class="pull-right">
									<%#= form_tag imeilist_path(ime.id),:method => :delete, :remote => true do %>
										<%#= submit_tag 'Delete',:class => 'btn btn-primary'%>
									<%# end %>
									<%= link_to 'Delete',imeilist_path(ime.id),:method => :delete %>
								</div>
							</td>
						</tr>
					</table>
				<% end %>
				<% end %>
      </div>
    </div>
  </div>
</div>