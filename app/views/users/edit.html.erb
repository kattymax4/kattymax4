<div class="container">  
  <div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4">
      <h1 class="text-center login-title">Edit Your Profile</h1>
      <div class="account-wall">

				<%= form_for @user , :url => {:action => :update}, method: :put do |f| %>
				  <div><%= f.label :email %><br />
				  <%= f.email_field :email ,class: "form-control" %>
					</div>
					<div><%= f.label :name %><br />
				  <%= f.text_field :name, class: "form-control" %>
					</div>
					<div><%= f.label :cnic %><br />
				  <%= f.text_field :cnic ,class: "form-control" %>
					</div>
					<div><%= f.label :address %><br />
				  <%= f.text_field :address,class: "form-control" %><br>
					</div>

				  <div><%= f.submit "Update" , class: "btn btn-lg btn-block", style: "background-color:#666;color:white" %></div>
				<% end %>
			</div>
		</div>
	</div>
</div>
